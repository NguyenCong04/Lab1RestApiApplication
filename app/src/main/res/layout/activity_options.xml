<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="15dp"
    android:gravity="center"
    tools:context=".OptionsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/firebase3_preview_rev_1"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLoginEmail"
        android:text="Login with email"
        android:fontFamily="serif"
        android:drawableStart="@drawable/email2"
        android:paddingStart="20dp"
        android:background="@drawable/custom_btn_email"
        android:padding="12dp"
        android:textColor="@color/white"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLoginPhone"
        android:text="Login with phone number"
        android:fontFamily="serif"
        android:drawableStart="@drawable/phone2"
        android:paddingStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_btn_phone"
        android:padding="12dp"
        android:textColor="@color/white"
        />
</LinearLayout>